<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile.Views.RoomsPage"
             Title="RoomsPage">
    <StackLayout>
        <Label x:Name="NoRoomsLabel" Text="No rooms available." IsVisible="False" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <ListView x:Name="RoomsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>